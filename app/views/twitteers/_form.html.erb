<% simple_form_for(@twitteer) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :twitteer, label: "Twitteer about it", input_html: {class: "textarea"},
    wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new twitteer...." %>
  </div>
</div>
<% f.button :submit, class: "button is-info" %>
<% end %>